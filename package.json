{
	"name": "api-typescript-boilerplate",
	"version": "1.0.0",
	"description": "",
	"main": "dist/index.js",
	"scripts": {
		"test": "jest --no-cache --runInBand",
		"test:cov": "jest --no-cache --runInBand --coverage",
		"test:staged": "jest --passWithNoTests --findRelatedTests",
		"build": "rimraf ./dist && tsc",
		"start": "npm run build && node dist/index.js",
		"dev": "ts-node-dev --respawn --transpile-only --inspect --ignore-watch node_modules index.ts",
		"lint": "eslint . --ext .ts --fix",
		"prettier": "prettier --config .prettierrc *.ts --write",
		"lint-staged": "lint-staged",
		"prepare": "husky install"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/jest": "^27.4.0",
		"@types/node": "^16.11.12",
		"@typescript-eslint/eslint-plugin": "^5.7.0",
		"@typescript-eslint/parser": "^5.7.0",
		"eslint": "^8.4.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-no-loops": "^0.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"lint-staged": "^12.1.2",
		"prettier": "^2.5.1",
		"prisma": "^3.10.0",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.1.3",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"@prisma/client": "^3.10.0",
		"dotenv": "^16.0.0"
	}
}
